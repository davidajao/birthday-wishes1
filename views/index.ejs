<!-- views/pages/index.ejs -->

<%- include ('./partials/head') %>

    <body class="container">

        <header class="masthead">
            <h1>BirthDay Wishes Bot</h1>
        </header>
        <main class="main">

            <article class="intro">
                <p>
                    <%= person_name %>'s Birthday is coming up soon :)</p><br>
            </article>
            <!-- .intro -->

            <section class="container">
                <br/>
                <div class="center">
                    <h5>This card will be sent 12:05:00am on the celebrants birthday</h5>
                </div>

                <br/>
                <div class="row">
                    <div class="col-md-2 center">
                        <i id="prev-song" class="fa fa-arrow-circle-o-left fa-4x" aria-hidden="true"></i> <br/>Previous song
                    </div>
                    <div class="col-md-8 center">
                        <p>Choose a song:</p>
                        <audio id="songholder" controls>
                            <source id="song" src="/audio/BirthDaySong.mp3" type="audio/mpeg">
                        </audio>
                        
                    </div>
                    <div class="col-md-2 center">
                        <i id="next-song" class="fa fa-arrow-circle-o-right fa-4x" aria-hidden="true"></i> <br/>Next song
                    </div>
                </div>


                <form id="image-holder" method="POST" action="/wishes/submit" enctype="multipart/form-data">

                    <input type="hidden" name="person_name" value=<%=person_name %>>

                    <input name="audio_url" type="text" value="/audio/BirthDaySong.mp3" style="display:none">

                    <div class="row">
                        <div class="col-md-2 center">
                            <i id="prev-image" class="fa fa-arrow-circle-o-left fa-4x" aria-hidden="true"></i> <br/>Previous card
                        </div>
                        <div class="col-md-8">
                            <div class="center photo-area">
                                <br/> Choose a card: &emsp;
                                <!--<input type="file" id='getval' name="background_image">-->
                                <input type="text" id='getval' name="background_image" value="/images/card1.jpg" style="display:none">
                                <br/><br/>
                            </div>
                        </div>
                        <div class="col-md-2 center">
                            <i id="next-image" class="fa fa-arrow-circle-o-right fa-4x" aria-hidden="true"></i> <br/>Next card
                        </div>
                    </div>


                    <div class="container">
                        <!--ROW 1-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="cloud">
                                    <textarea class="textcloud" name="wish1" rows="6" placeholder="Wish your Friend here!"></textarea>
                                    <span class='shadow'> </span>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4">

                                <div class="cloud2">
                                    <textarea class="textcloud2" name="wish2" rows="6" placeholder="Wish your Friend here!"></textarea>
                                    <span class='shadow'> </span>
                                </div>
                            </div>
                        </div>

                        <!--ROW 2-->
                        <div class="row">
                            <div class="col-md-4">

                                <div class="cloud2">
                                    <textarea class="textcloud2" name="wish3" rows="6" placeholder="Wish your Friend here!"></textarea>
                                    <span class='shadow'> </span>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="cloud">
                                    <textarea class="textcloud" name="wish4" rows="6" placeholder="Wish your Friend here!"></textarea>
                                    <span class='shadow'> </span>
                                </div>
                            </div>
                        </div>

                        <!--ROW 3-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="cloud">
                                    <textarea class="textcloud" name="wish5" rows="6" placeholder="Wish your Friend here!"></textarea>
                                    <span class='shadow'> </span>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4">

                                <div class="cloud2">
                                    <textarea class="textcloud2" name="wish6" rows="6" placeholder="Wish your Friend here!"></textarea>

                                    <span class='shadow'> </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--ROW 4-->
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <div class="cloud">
                                <textarea class="textcloud" name="wish7" rows="6" placeholder="Wish your Friend here!"></textarea>
                                <span class='shadow'> </span>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    </div>

                    <br/><br/>
                    <div class="center">
                        <button type="submit" class="btnCustom">Submit</button>
                        <!--                     <button class="btnCustom ">Reset</button>-->
                    </div>

                    <!--BirthDay Wishes Ends-->
                </form>
            </section>
            <!-- .test-area -->



            <%- include ('./partials/footer') %>
    </body>
